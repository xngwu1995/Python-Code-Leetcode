class Solution:
    def minDays(self, bloomDay: List[int], m: int, k: int) -> int:
        # m: bouquets need to make
        # k: adjacent flowers
        if m * k > len(bloomDay): return -1
        left, right = 1, max(bloomDay)
        while left < right:
            mid = (left + right) // 2
            flower = bouq = 0
            for time in bloomDay:
                if time > mid:
                    flower = 0
                else:
                    flower += 1
                if flower >= k:
                    flower = 0
                    bouq += 1
                    if bouq == m: 
                        break
            if bouq == m:
                right = mid
            else:
                left = mid + 1
        return left
