class Solution:
    def minmaxGasDist(self, stations: List[int], k: int) -> float:
        left,right = 1e-6, stations[-1] - stations[0]
        while left + 1e-6 < right:
            mid = (left + right) / 2
            count = 0
            for a,b in zip(stations,stations[1:]):
                count += ceil((b-a)/mid) - 1
            if count > k:
                left = mid
            else:
                right = mid
        return right
