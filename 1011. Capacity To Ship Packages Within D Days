class Solution:
    def shipWithinDays(self, weights: List[int], D: int) -> int:
        left,right = max(weights),sum(weights)
        while left < right:
            mid = (left+right) // 2
            need = 1
            curr_weight = 0
            for weight in weights:
                if curr_weight + weight > mid:
                    need += 1
                    curr_weight = 0
                curr_weight += weight
            if need > D:
                left = mid + 1
            else:
                right = mid
        return left
